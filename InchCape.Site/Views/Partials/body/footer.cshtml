@inherits UmbracoViewPage<IFooterCopyRight>
    
<!--Footer-->
<div class="">
    <footer class="row row-cols-1 row-cols-sm-2 row-cols-md-2 py-5 border-top bodyFooter">
        <div class="col-6 mb-3">
            <div class="row">
                <div class="container rowIcon ">
                    @if (Model.SocialMedia != null)
                    {
                        @foreach (var item in @Model.SocialMedia)
                        {
                            <i class="@item socialM"></i>
                        }
                    }

                </div>
            </div>
            <div class="row ">
                <div class="container linkFooter">
                    @if (Model.SeccionesPoliticaFooter != null)
                    {
                        @foreach (var item in @Model.SeccionesPoliticaFooter)
                        {
                            <div class="spacingf">
                                <a href="">@item</a>
                            </div>
                        }
                    }
                </div>
            </div>
            <div class="row spacingf">
                <p>@Model.CopyRightFooter</p>
            </div>
        </div>
        <div class="col mb-3">
            <div class="row">
                <h2 style="color: midnightblue;">Quick Links</h2>
                <div class="col">
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 quickText">All Vehicles</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 quickText">Ford Protect</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 quickText">About Ford</a></li>
                    </ul>
                </div>
                <div class="col">
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 quickText">Fleet Homepage</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 quickText">Newsroom</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 quickText">Contact Us</a></li>
                    </ul>
                </div>
                <div class="col">
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 quickText">Book a Service</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 quickText">Careers</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 quickText">Show More</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
</div>